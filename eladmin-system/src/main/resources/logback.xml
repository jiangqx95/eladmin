<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds" debug="false">
    <!--日志信息前缀-->
    <contextName>elAdmin</contextName>
    <!--日志文件保存目录-->
    <property name="log.home" value="logs/%d{yyyy-MM,aux}/"/>
    <!--编码格式-->
    <property name="log.charset" value="utf-8"/>
    <!--日志格式-->
    <property name="log.pattern"
              value="%contextName- %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>
    <!--彩色输出-->
    <property name="log.pattern.color"
              value="%contextName- %red(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %highlight(%-5level) %boldMagenta(%logger{36}) - %msg%n"/>

    <!-- 输出到控制台 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
            <charset>${log.charset}</charset>
        </encoder>
    </appender>
    <appender name="console.dev" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern.color}</pattern>
            <charset>${log.charset}</charset>
        </encoder>
    </appender>

    <!-- 生成日志文件 -->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${log.home}/%d{yyyy-MM-dd-HH}.log</FileNamePattern>
            <MaxHistory>60</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
            <charset>${log.charset}</charset>
        </encoder>
    </appender>

    <!--普通日志输出到控制台-->
    <root level="info">
        <springProfile name="dev">
            <appender-ref ref="console.dev"/>
        </springProfile>
        <springProfile name="prod,test">
            <appender-ref ref="console"/>
            <appender-ref ref="file"/>
        </springProfile>
    </root>

    <!--监控sql日志输出,如需监控 Sql 打印，请设置为 INFO -->
    <logger name="jdbc.sqlonly" level="INFO" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="console.dev"/>
        </springProfile>
        <springProfile name="prod,test">
            <appender-ref ref="console"/>
            <appender-ref ref="file"/>
        </springProfile>
    </logger>

    <logger name="jdbc.resultset" level="ERROR" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="console.dev"/>
        </springProfile>
        <springProfile name="prod,test">
            <appender-ref ref="console"/>
            <appender-ref ref="file"/>
        </springProfile>
    </logger>

    <!--  如想看到表格数据，将OFF改为INFO  -->
    <logger name="jdbc.resultsettable" level="OFF" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="console.dev"/>
        </springProfile>
        <springProfile name="prod,test">
            <appender-ref ref="console"/>
            <appender-ref ref="file"/>
        </springProfile>
    </logger>

    <!--Connection 的 open、close 等信息-->
    <logger name="jdbc.connection" level="OFF" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="console.dev"/>
        </springProfile>
        <springProfile name="prod,test">
            <appender-ref ref="console"/>
            <appender-ref ref="file"/>
        </springProfile>
    </logger>

    <!--SQL语句实际的执行时间-->
    <logger name="jdbc.sqltiming" level="OFF" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="console.dev"/>
        </springProfile>
        <springProfile name="prod,test">
            <appender-ref ref="console"/>
            <appender-ref ref="file"/>
        </springProfile>
    </logger>

    <!--所有JDBC调用信息-->
    <logger name="jdbc.audit" level="OFF" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="console.dev"/>
        </springProfile>
        <springProfile name="prod,test">
            <appender-ref ref="console"/>
            <appender-ref ref="file"/>
        </springProfile>
    </logger>
</configuration>
